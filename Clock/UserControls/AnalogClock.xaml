    <Grid Width="{x:Bind Size, Mode=OneWay}" Height="{x:Bind Size, Mode=OneWay}">
        
        <!-- Hour Hand -->
        <controls:RadialGauge
            Value="{x:Bind HourValue, Mode=OneWay}"
            Minimum="0"
            Maximum="216000"
            NeedleWidth="5"
            NeedleLength="40"
            IsInteractive="False"
            StepSize="1"
            Foreground="Transparent"
            ScaleWidth="0"
            MinAngle="0"
            MaxAngle="360"
            TickLength="0"
            TickWidth="0"/>
        
        <!-- Minute Hand -->
        <controls:RadialGauge
            Value="{x:Bind MinuteValue, Mode=OneWay}"
            Minimum="0"
            Maximum="3600"
            NeedleWidth="4"
            NeedleLength="50"
            IsInteractive="False"
            StepSize="1"
            Foreground="Transparent"
            ScaleWidth="0"
            MinAngle="0"
            MaxAngle="360"
            TickLength="0"
            TickWidth="0"/>

        <!-- Second Hand -->
        <controls:RadialGauge
            Value="{x:Bind SecondValue, Mode=OneWay}"
            Minimum="0"
            Maximum="60"
            NeedleWidth="3"
            NeedleLength="70"
            IsInteractive="False"
            StepSize="1"
            Foreground="Transparent"
            ScaleWidth="0"
            MinAngle="0"
            MaxAngle="360"
            TickLength="0"
            TickWidth="0"/>
        
        <!-- Foreground 1: Hour Interval Tick & Outside Circle -->
        <controls:RadialGauge
            TickLength="9"
            TickWidth="2"
            TickSpacing="5"
            TickPadding="9"
            ScaleWidth="3"
            ScalePadding="0"
            ScaleTickWidth="0"
            Foreground="Transparent"
            IsInteractive="False"
            Value="0"
            Minimum="0"
            Maximum="60"
            MinAngle="0"
            MaxAngle="360"
            NeedleWidth="0"
            NeedleLength="0"/>
        
        <!-- Foreground 2: Minute Interval Tick -->
        <controls:RadialGauge
            TickLength="6"
            TickWidth="2"
            TickSpacing="1"
            TickPadding="9"
            ScaleWidth="0"
            ScalePadding="0"
            ScaleTickWidth="0"
            Foreground="Transparent"
            IsInteractive="False"
            Value="0"
            Minimum="0"
            Maximum="60"
            MinAngle="0"
            MaxAngle="360"
            NeedleWidth="0"
            NeedleLength="0"/>

        <!-- Foreground 3: Hand Central Bracket  -->
        <Ellipse 
            Height="6" 
            Width="6"
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"
            Fill="{ThemeResource RadialGaugeNeedleBackground}"/>
        
    </Grid>
    
</UserControl>
