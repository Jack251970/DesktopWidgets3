    <Grid Width="{x:Bind Size, Mode=OneWay}" Height="{x:Bind Size, Mode=OneWay}">

        <!--  Hour Hand  -->
        <controls:RadialGauge
            Foreground="Transparent"
            IsInteractive="False"
            MaxAngle="360"
            Maximum="216000"
            MinAngle="0"
            Minimum="0"
            NeedleLength="40"
            NeedleWidth="5"
            ScaleWidth="0"
            StepSize="1"
            TickLength="0"
            TickWidth="0"
            Value="{x:Bind HourValue, Mode=OneWay}" />

        <!--  Minute Hand  -->
        <controls:RadialGauge
            Foreground="Transparent"
            IsInteractive="False"
            MaxAngle="360"
            Maximum="3600"
            MinAngle="0"
            Minimum="0"
            NeedleLength="50"
            NeedleWidth="4"
            ScaleWidth="0"
            StepSize="1"
            TickLength="0"
            TickWidth="0"
            Value="{x:Bind MinuteValue, Mode=OneWay}" />

        <!--  Second Hand  -->
        <controls:RadialGauge
            Foreground="Transparent"
            IsInteractive="False"
            MaxAngle="360"
            Maximum="60"
            MinAngle="0"
            Minimum="0"
            NeedleLength="70"
            NeedleWidth="3"
            ScaleWidth="0"
            StepSize="1"
            TickLength="0"
            TickWidth="0"
            Value="{x:Bind SecondValue, Mode=OneWay}" />

        <!--  Foreground 1: Hour Interval Tick & Outside Circle  -->
        <controls:RadialGauge
            Foreground="Transparent"
            IsInteractive="False"
            MaxAngle="360"
            Maximum="60"
            MinAngle="0"
            Minimum="0"
            NeedleLength="0"
            NeedleWidth="0"
            ScalePadding="0"
            ScaleTickWidth="0"
            ScaleWidth="3"
            TickLength="9"
            TickPadding="9"
            TickSpacing="5"
            TickWidth="2"
            Value="0" />

        <!--  Foreground 2: Minute Interval Tick  -->
        <controls:RadialGauge
            Foreground="Transparent"
            IsInteractive="False"
            MaxAngle="360"
            Maximum="60"
            MinAngle="0"
            Minimum="0"
            NeedleLength="0"
            NeedleWidth="0"
            ScalePadding="0"
            ScaleTickWidth="0"
            ScaleWidth="0"
            TickLength="6"
            TickPadding="9"
            TickSpacing="1"
            TickWidth="2"
            Value="0" />

        <!--  Foreground 3: Hand Central Bracket  -->
        <Ellipse
            Width="6"
            Height="6"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Fill="{ThemeResource AccentFillColorTertiaryBrush}" />
    </Grid>
</UserControl>