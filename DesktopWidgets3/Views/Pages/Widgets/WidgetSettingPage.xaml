<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="DesktopWidgets3.Views.Pages.Widgets.WidgetSettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DesktopWidgets3.Views.Pages.Widgets"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:DesktopWidgets3.ViewModels.Pages.Widgets"
    d:DataContext="{d:DesignInstance Type=viewmodels:WidgetSettingViewModel}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Disabled"
    mc:Ignorable="d">
    <!--  // TODO: Check if ApplicationPageBackgroundThemeBrush is needed.  -->

    <Grid x:Name="ContentArea">
        <ScrollViewer
            x:Name="WidgetScrollViewer"
            Content="{x:Bind ViewModel.WidgetFrameworkElement, Mode=OneWay}"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto" />
    </Grid>
</Page>
