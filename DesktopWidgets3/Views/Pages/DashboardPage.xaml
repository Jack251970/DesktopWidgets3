<Page
    x:Class="DesktopWidgets3.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:viewmodels="using:DesktopWidgets3.ViewModels.Pages"
    d:DataContext="{d:DesignInstance Type=viewmodels:DashboardViewModel}"
    NavigationCacheMode="Required"
    mc:Ignorable="d">
    <Page.Resources>
        <!--  Spacing between cards  -->
        <x:Double x:Key="CardSpacing">12</x:Double>
    </Page.Resources>

    <StackPanel x:Name="ContentArea" Spacing="{StaticResource CardSpacing}">
        <Grid VerticalAlignment="Top" HorizontalAlignment="Stretch" Style="{StaticResource CardPanelStyle}"
              Padding="{StaticResource SmallMargin}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock x:Uid="Dashboard_Total" 
                       Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Margin="{StaticResource SmallBottomMargin}"/>
            <TextBlock x:Uid="Dashboard_CompletedTimes" 
                       Grid.Column="0" Grid.Row="1"
                       Style="{StaticResource AppendTextBlockStyle}"/>
            <TextBlock Grid.Column="0" Grid.Row="2" 
                       Text="{x:Bind ViewModel.CompletedTimes, Mode=OneWay}"
                       Style="{StaticResource AppendTextBlockStyle}"/>
            <TextBlock x:Uid="Dashboard_TotalTime" 
                       Grid.Column="1" Grid.Row="1"
                       Style="{StaticResource AppendTextBlockStyle}"/>
            <TextBlock Grid.Column="1" Grid.Row="2" 
                       Text="{x:Bind ViewModel.TotalTime, Mode=OneWay}"
                       Style="{StaticResource AppendTextBlockStyle}"/>
            <TextBlock x:Uid="Dashboard_AverageTime"
                       Grid.Column="2" Grid.Row="1"
                       Style="{StaticResource AppendTextBlockStyle}"/>
            <TextBlock Grid.Column="2" Grid.Row="2" 
                       Text="{x:Bind ViewModel.AverageTime, Mode=OneWay}"
                       Style="{StaticResource AppendTextBlockStyle}"/>
        </Grid>

        <Grid VerticalAlignment="Top" HorizontalAlignment="Stretch" Style="{StaticResource CardPanelStyle}"
              Padding="{StaticResource SmallMargin}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Text="{x:Bind ViewModel.TodaySummary, Mode=OneWay}"
                       Margin="{StaticResource SmallBottomMargin}"/>
            <TextBlock Grid.Row="1" Grid.Column="0" 
                       x:Uid="Dashboard_CompletedTimes"
                       Style="{StaticResource AppendTextBlockStyle}"/>
            <TextBlock Grid.Row="2" Grid.Column="0"
                       Text="{x:Bind ViewModel.TodayCompletedTimes, Mode=OneWay}"
                       Style="{StaticResource AppendTextBlockStyle}"/>
            <TextBlock Grid.Row="1" Grid.Column="1"
                       x:Uid="Dashboard_TotalTime"
                       Style="{StaticResource AppendTextBlockStyle}"/>
            <TextBlock Grid.Row="2" Grid.Column="1"
                       Text="{x:Bind ViewModel.TodayTotalTime, Mode=OneWay}"
                       Style="{StaticResource AppendTextBlockStyle}"/>
        </Grid>
    </StackPanel>
</Page>
