<Page
    x:Class="DesktopWidgets3.Views.Pages.Widgets.ClockPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:widget="using:DesktopWidgets3.ViewModels.Pages.Widgets"
    xmlns:clock="using:Clock.UserControls"
    d:DataContext="{d:DesignInstance Type=widget:ClockViewModel}"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea"
        Background="Transparent">
        <StackPanel 
            Orientation="Vertical"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <clock:AnalogClock
                DateTime="{x:Bind ViewModel.DateTime, Mode=OneWay}"
                HandsMode="{x:Bind ViewModel.HandsMode, Mode=OneWay}"
                Size="200"
                HorizontalAlignment="Center"/>
            <TextBlock
                Text="{x:Bind ViewModel.SystemTime, Mode=OneWay}"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
