<Page
    x:Class="DesktopWidgets3.Views.Pages.Widget.Disk.DiskPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:disk="using:DesktopWidgets3.ViewModels.Pages.Widget.Disk"
    xmlns:behaviors="using:DesktopWidgets3.Behaviors"
    d:DataContext="{d:DesignInstance Type=disk:DiskViewModel}"
    behaviors:NavigationViewHeaderBehavior.HeaderMode="Never"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Grid
        x:Name="ContentArea"
        Background="Transparent"
        RightTapped="ContentArea_RightTapped">
        <TextBlock 
            Text="Disk"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Style="{ThemeResource PageTitleStyle}" />
    </Grid>
</Page>
