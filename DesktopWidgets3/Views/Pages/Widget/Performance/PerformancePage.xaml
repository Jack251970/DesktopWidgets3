<Page
    x:Class="DesktopWidgets3.Views.Pages.Widgets.PerformancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:widget="using:DesktopWidgets3.ViewModels.Pages.Widgets"
    xmlns:behaviors="using:DesktopWidgets3.Behaviors"
    d:DataContext="{d:DesignInstance Type=widget:PerformanceViewModel}"
    behaviors:NavigationViewHeaderBehavior.HeaderMode="Never"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Grid
        x:Name="ContentArea"
        Background="Transparent">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Text="{x:Bind ViewModel.CpuInfo, Mode=OneWay}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            <TextBlock
                Grid.Column="1"
                Text="{x:Bind ViewModel.GpuInfo, Mode=OneWay}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            <TextBlock
                Grid.Column="2"
                Text="{x:Bind ViewModel.MemoryInfo, Mode=OneWay}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
        </Grid>
    </Grid>
</Page>
