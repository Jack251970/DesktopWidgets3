<Page
    x:Class="DesktopWidgets3.Views.WidgetPages.Folder.FolderViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:folder="using:DesktopWidgets3.ViewModels.WidgetsPages.Folder"
    xmlns:behaviors="using:DesktopWidgets3.Behaviors"
    d:DataContext="{d:DesignInstance Type=folder:FolderViewViewModel}"
    behaviors:NavigationViewHeaderBehavior.HeaderMode="Never"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock 
            Text="{x:Bind ViewModel.FolderPath, Mode=OneWay}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Style="{ThemeResource PageTitleStyle}" />
    </Grid>
</Page>
