<UserControl
    x:Class="DesktopWidgets3.UserControls.TrayMenuControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tb="using:H.NotifyIcon"
    mc:Ignorable="d">

    <tb:TaskbarIcon 
        x:Name="TrayIconControl"
        x:Uid="TrayMenu_TaskBarIcon"
        ContextMenuMode="SecondWindow"
        IconSource="/Assets/WindowIcon.ico"
        DoubleClickCommand="{x:Bind ShowWindowCommand}"
        NoLeftClickDelay="True"
        MenuActivation="RightClick">
        <tb:TaskbarIcon.ContextFlyout>
            <MenuFlyout AreOpenCloseAnimationsEnabled="False">
                <MenuFlyoutItem
                    x:Uid="TrayMenu_MenuFlyoutItem_ShowWindow"
                    Command="{x:Bind ShowWindowCommand}"/>
                <MenuFlyoutSeparator />
                <MenuFlyoutItem
                    x:Uid="TrayMenu_MenuFlyoutItem_ExitApp"
                    Command="{x:Bind ExitAppCommand}"/>
            </MenuFlyout>
        </tb:TaskbarIcon.ContextFlyout>
    </tb:TaskbarIcon>
</UserControl>
