<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <!-- General Properties -->
    <OutputType>WinExe</OutputType>
    <Title>Desktop Widgets 3</Title>
    <ApplicationIcon>Assets\WindowIcon.ico</ApplicationIcon>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <Configurations>Debug;Release</Configurations>
    <RootNamespace>DesktopWidgets3</RootNamespace>
    <!-- Assembly Info Properties -->
    <AssemblyName>DesktopWidget3</AssemblyName>
    <AssemblyTitle>$(Title)</AssemblyTitle>
    <ProductName>$(Title)</ProductName>
    <Product>$(AssemblyName)</Product>
    <Description>A app for many useful desktop widgets.</Description>
    <Company>$(Title) Team</Company>
    <Authors>$(Company). Jack251970.</Authors>
    <Copyright>Copyright © 2023-2024 $(Company)</Copyright>
    <!-- Package Properties -->
    <PackageIcon>PackageIcon.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <NeutralLanguage>en</NeutralLanguage>
    <!-- Versioning -->
    <Version>3.0.0</Version>
    <!-- Target Settings -->
    <Platforms>x86;x64;arm64</Platforms>
    <TargetFramework>net8.0-windows10.0.22621.0</TargetFramework>
    <!--<WindowsSdkPackageVersion>10.0.22621.41</WindowsSdkPackageVersion>-->
    <TargetPlatformMinVersion>10.0.19041.0</TargetPlatformMinVersion>
    <RuntimeIdentifiers>win-x86;win-x64;win-arm64</RuntimeIdentifiers>
    <!--<EnableWindowsTargeting>true</EnableWindowsTargeting>-->
    <!-- WinUI Properties -->
    <UseWinUI>true</UseWinUI>
    <WindowsAppSDKSelfContained>true</WindowsAppSDKSelfContained>
    <!-- Other Settings -->
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <EnableMsixTooling>true</EnableMsixTooling>
  </PropertyGroup>

  <PropertyGroup Condition="'$(DisableHasPackageAndPublishMenuAddedByProject)'!='true' and '$(EnableMsixTooling)'=='true'">
    <HasPackageAndPublishMenu>true</HasPackageAndPublishMenu>
  </PropertyGroup>

  <PropertyGroup>
    <WidgetProjects>
      ..\Widgets\DesktopWidgets3.Widget.Jack251970.AnalogClock\DesktopWidgets3.Widget.Jack251970.AnalogClock.csproj;
      ..\Widgets\DesktopWidgets3.Widget.Jack251970.DigitalClock\DesktopWidgets3.Widget.Jack251970.DigitalClock.csproj;
      ..\Widgets\DesktopWidgets3.Widget.Jack251970.Disk\DesktopWidgets3.Widget.Jack251970.Disk.csproj;
      ..\Widgets\DesktopWidgets3.Widget.Jack251970.Network\DesktopWidgets3.Widget.Jack251970.Network.csproj;
      ..\Widgets\DesktopWidgets3.Widget.Jack251970.Performance\DesktopWidgets3.Widget.Jack251970.Performance.csproj
    </WidgetProjects>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.2" />
    <PackageReference Include="CommunityToolkit.Uwp.Controls.MetadataControl" Version="8.1.240821" />
    <PackageReference Include="CommunityToolkit.Uwp.Controls.RichSuggestBox" Version="8.1.240821" />
    <PackageReference Include="CommunityToolkit.Uwp.Controls.TokenizingTextBox" Version="8.1.240821" />
    <PackageReference Include="CommunityToolkit.WinUI.Controls.CameraPreview" Version="8.1.240821" />
    <PackageReference Include="CommunityToolkit.WinUI.Controls.ColorPicker" Version="8.1.240821" />
    <PackageReference Include="CommunityToolkit.WinUI.Controls.HeaderedControls" Version="8.1.240821" />
    <PackageReference Include="CommunityToolkit.WinUI.Controls.ImageCropper" Version="8.1.240821" />
    <PackageReference Include="CommunityToolkit.WinUI.Controls.LayoutTransformControl" Version="8.1.240821" />
    <PackageReference Include="CommunityToolkit.WinUI.Controls.Primitives" Version="8.1.240821" />
    <PackageReference Include="CommunityToolkit.WinUI.Controls.RadialGauge" Version="8.1.240821" />
    <PackageReference Include="CommunityToolkit.WinUI.Controls.RangeSelector" Version="8.1.240821" />
    <PackageReference Include="CommunityToolkit.WinUI.Controls.Segmented" Version="8.1.240821" />
    <PackageReference Include="CommunityToolkit.WinUI.Controls.SettingsControls" Version="8.1.240821" />
    <PackageReference Include="CommunityToolkit.WinUI.Controls.Sizers" Version="8.1.240821" />
    <PackageReference Include="CommunityToolkit.WinUI.Controls.TabbedCommandBar" Version="8.1.240821" />
    <PackageReference Include="H.NotifyIcon.WinUI" Version="2.1.3" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
    <PackageReference Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.26100.1" />
    <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.5.240802000" />
    <PackageReference Include="Microsoft.Xaml.Behaviors.WinUI.Managed" Version="2.0.9" />
    <PackageReference Include="WinUIEx" Version="2.3.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CustomExtensions.WinUI\CustomExtensions.WinUI.csproj" />
    <ProjectReference Include="..\DesktopWidgets3.Core.Widgets\DesktopWidgets3.Core.Widgets.csproj" />
    <ProjectReference Include="..\DesktopWidgets3.Core\DesktopWidgets3.Core.csproj" />
    <ProjectReference Include="..\DesktopWidgets3.Infrastructure\DesktopWidgets3.Infrastructure.csproj" />
    <ProjectReference Include="..\DesktopWidgets3.Widget\DesktopWidgets3.Widget.csproj" />
    <ProjectReference Include="..\Extensions\DesktopWidgets3.HardwareInfoProvider\DesktopWidgets3.HardwareInfoProvider.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Assets\FluentIcons\Unknown.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Assets\PackageIcon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Content Update="Assets\WindowIcon.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Remove="Assets\FluentIcons\*.png" />
    <Content Remove="Assets\PackageIcon.png" />
  </ItemGroup>

  <ItemGroup>
    <Manifest Include="$(ApplicationManifest)" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="UserControls\" />
  </ItemGroup>

  <ItemGroup Condition="'$(DisableMsixProjectCapabilityAddedByProject)'!='true' and '$(EnableMsixTooling)'=='true'">
    <ProjectCapability Include="Msix" />
  </ItemGroup>

  <Target Name="BuildWidgetProjectsAndCopy" AfterTargets="Build">
    <!-- Build widget projects -->
    <ItemGroup>
      <WidgetProjects Include="$(WidgetProjects)" />
    </ItemGroup>
    <MSBuild Projects="@(WidgetProjects)" Targets="Build" Properties="Platform=$(Platform);Configuration=$(Configuration);TargetFramework=$(TargetFramework)" />
    <!-- Copy widget project files -->
    <!-- Analog Clock -->
    <ItemGroup>
      <AnalogClockFiles Include="$(SolutionDir)Widgets\DesktopWidgets3.Widget.Jack251970.AnalogClock\bin\$(Platform)\$(Configuration)\$(TargetFramework)\**\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(AnalogClockFiles)" DestinationFolder="$(TargetDir)Widgets\DesktopWidgets3.Widget.Jack251970.AnalogClock\%(RecursiveDir)" />
    <!-- Digital Clock -->
    <ItemGroup>
      <DigitalClockFiles Include="$(SolutionDir)Widgets\DesktopWidgets3.Widget.Jack251970.DigitalClock\bin\$(Platform)\$(Configuration)\$(TargetFramework)\**\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(DigitalClockFiles)" DestinationFolder="$(TargetDir)Widgets\DesktopWidgets3.Widget.Jack251970.DigitalClock\%(RecursiveDir)" />
    <!-- Disk -->
    <ItemGroup>
      <DiskFiles Include="$(SolutionDir)Widgets\DesktopWidgets3.Widget.Jack251970.Disk\bin\$(Platform)\$(Configuration)\$(TargetFramework)\**\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(DiskFiles)" DestinationFolder="$(TargetDir)Widgets\DesktopWidgets3.Widget.Jack251970.Disk\%(RecursiveDir)" />
    <!-- Network -->
    <ItemGroup>
      <NetworkFiles Include="$(SolutionDir)Widgets\DesktopWidgets3.Widget.Jack251970.Network\bin\$(Platform)\$(Configuration)\$(TargetFramework)\**\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(NetworkFiles)" DestinationFolder="$(TargetDir)Widgets\DesktopWidgets3.Widget.Jack251970.Network\%(RecursiveDir)" />
    <!-- Performance -->
    <ItemGroup>
      <PerformanceFiles Include="$(SolutionDir)Widgets\DesktopWidgets3.Widget.Jack251970.Performance\bin\$(Platform)\$(Configuration)\$(TargetFramework)\**\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(PerformanceFiles)" DestinationFolder="$(TargetDir)Widgets\DesktopWidgets3.Widget.Jack251970.Performance\%(RecursiveDir)" />
  </Target>
  
</Project>
