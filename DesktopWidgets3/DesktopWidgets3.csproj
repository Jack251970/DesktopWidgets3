<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows10.0.22621.0</TargetFramework>
    <TargetPlatformMinVersion>10.0.19041.0</TargetPlatformMinVersion>
    <RootNamespace>DesktopWidgets3</RootNamespace>
    <ApplicationIcon>Assets\WindowIcon.ico</ApplicationIcon>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <Platforms>x86;x64;arm64</Platforms>
    <RuntimeIdentifiers>win-x86;win-x64;win-arm64</RuntimeIdentifiers>
    <PublishProfile>Properties\PublishProfiles\win10-$(Platform).pubxml</PublishProfile>
	  <ImplicitUsings>enable</ImplicitUsings>
	  <Nullable>enable</Nullable>
	  <UseWinUI>true</UseWinUI>
    <EnableMsixTooling>true</EnableMsixTooling>
    <WindowsAppSDKSelfContained>true</WindowsAppSDKSelfContained>
    <Title>Desktop Widgets 3</Title>
    <Version>3.0.0</Version>
    <Authors>Jack251970</Authors>
    <Description>A app for many useful desktop widgets.</Description>
    <Copyright>Copyright © 2024 Jack251970</Copyright>
    <PackageIcon>PackageIcon.png</PackageIcon>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <NeutralLanguage>en</NeutralLanguage>
    <GenerateAppInstallerFile>True</GenerateAppInstallerFile>
    <AppxPackageSigningEnabled>True</AppxPackageSigningEnabled>
    <PackageCertificateThumbprint>318145A86B844B1C331B4CECF2F874EA139197BC</PackageCertificateThumbprint>
    <AppxPackageSigningTimestampDigestAlgorithm>SHA256</AppxPackageSigningTimestampDigestAlgorithm>
    <AppxAutoIncrementPackageRevision>True</AppxAutoIncrementPackageRevision>
    <AppxPackageDir>E:\source\DesktopWidgets3\DesktopWidgets3\bin\x64\Release\net7.0-windows10.0.19041.0\AppPackages\</AppxPackageDir>
    <AppxSymbolPackageEnabled>False</AppxSymbolPackageEnabled>
    <GenerateTestArtifacts>True</GenerateTestArtifacts>
    <AppxBundle>Always</AppxBundle>
    <AppxBundlePlatforms>x64</AppxBundlePlatforms>
    <AppInstallerUri>E:\source\DesktopWidgets3\DesktopWidgets3\bin\x64\Release\net7.0-windows10.0.19041.0\AppPackages\</AppInstallerUri>
  </PropertyGroup>

  <PropertyGroup Condition="'$(DisableHasPackageAndPublishMenuAddedByProject)'!='true' and '$(EnableMsixTooling)'=='true'">
    <HasPackageAndPublishMenu>true</HasPackageAndPublishMenu>
  </PropertyGroup>

  <PropertyGroup>
    <WidgetProjects>
      ..\Widgets\DesktopWidgets3.Widget.Jack251970.AnalogClock\DesktopWidgets3.Widget.Jack251970.AnalogClock.csproj;
      ..\Widgets\DesktopWidgets3.Widget.Jack251970.DigitalClock\DesktopWidgets3.Widget.Jack251970.DigitalClock.csproj;
      ..\Widgets\DesktopWidgets3.Widget.Jack251970.Disk\DesktopWidgets3.Widget.Jack251970.Disk.csproj;
      ..\Widgets\DesktopWidgets3.Widget.Jack251970.Network\DesktopWidgets3.Widget.Jack251970.Network.csproj;
      ..\Widgets\DesktopWidgets3.Widget.Jack251970.Performance\DesktopWidgets3.Widget.Jack251970.Performance.csproj
    </WidgetProjects>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.2" />
    <PackageReference Include="CommunityToolkit.WinUI.Controls.Primitives" Version="8.1.240821" />
    <PackageReference Include="CommunityToolkit.WinUI.Controls.SettingsControls" Version="8.1.240821" />
    <PackageReference Include="H.NotifyIcon.WinUI" Version="2.1.3" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
    <PackageReference Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.26100.1" />
    <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.5.240802000" />
    <PackageReference Include="Microsoft.Xaml.Behaviors.WinUI.Managed" Version="2.0.9" />
    <PackageReference Include="WinUIEx" Version="2.3.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CustomExtensions.WinUI\CustomExtensions.WinUI.csproj" />
    <ProjectReference Include="..\DesktopWidgets3.Core.Widgets\DesktopWidgets3.Core.Widgets.csproj" />
    <ProjectReference Include="..\DesktopWidgets3.Core\DesktopWidgets3.Core.csproj" />
    <ProjectReference Include="..\DesktopWidgets3.Infrastructure\DesktopWidgets3.Infrastructure.csproj" />
    <ProjectReference Include="..\DesktopWidgets3.Widget\DesktopWidgets3.Widget.csproj" />
    <ProjectReference Include="..\Extensions\DesktopWidgets3.HardwareInfoProvider\DesktopWidgets3.HardwareInfoProvider.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Assets\FluentIcons\Unknown.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Assets\PackageIcon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Content Update="Assets\WindowIcon.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Remove="Assets\FluentIcons\*.png" />
    <Content Remove="Assets\PackageIcon.png" />
  </ItemGroup>

  <ItemGroup>
    <Manifest Include="$(ApplicationManifest)" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="UserControls\" />
  </ItemGroup>

  <ItemGroup Condition="'$(DisableMsixProjectCapabilityAddedByProject)'!='true' and '$(EnableMsixTooling)'=='true'">
    <ProjectCapability Include="Msix" />
  </ItemGroup>

  <Target Name="BuildWidgetProjectsAndCopy" AfterTargets="Build">
    <ItemGroup>
      <WidgetProjects Include="$(WidgetProjects)" />
    </ItemGroup>

    <MSBuild Projects="@(WidgetProjects)" Targets="Build" Properties="Configuration=$(Configuration);Platform=$(Platform)" />

    <!-- Copy project file -->
    <!--<Copy SourceFiles="$(SolutionDir)Widgets\DesktopWidgets3.Widget.Jack251970.AnalogClock\bin\$(Platform)\$(Configuration)\$(TargetFramework)\DesktopWidgets3.Widget.Jack251970.AnalogClock.dll" 
          DestinationFolder="$(TargetDir)Widgets\DesktopWidgets3.Widget.Jack251970.AnalogClock\DesktopWidgets3.Widget.Jack251970.AnalogClock.dll" />-->

    <!-- Copy project files -->
    <ItemGroup>
      <AnalogClockFiles Include="$(SolutionDir)Widgets\DesktopWidgets3.Widget.Jack251970.AnalogClock\bin\$(Platform)\$(Configuration)\$(TargetFramework)\**\*.*" />
    </ItemGroup>

    <Copy SourceFiles="@(AnalogClockFiles)"
          DestinationFolder="$(TargetDir)Widgets\DesktopWidgets3.Widget.Jack251970.AnalogClock\%(RecursiveDir)" />
    
    <ItemGroup>
      <DigitalClockFiles Include="$(SolutionDir)Widgets\DesktopWidgets3.Widget.Jack251970.DigitalClock\bin\$(Platform)\$(Configuration)\$(TargetFramework)\**\*.*" />
    </ItemGroup>

    <Copy SourceFiles="@(DigitalClockFiles)"
          DestinationFolder="$(TargetDir)Widgets\DesktopWidgets3.Widget.Jack251970.DigitalClock\%(RecursiveDir)" />
    
    <ItemGroup>
      <DiskFiles Include="$(SolutionDir)Widgets\DesktopWidgets3.Widget.Jack251970.Disk\bin\$(Platform)\$(Configuration)\$(TargetFramework)\**\*.*" />
    </ItemGroup>

    <Copy SourceFiles="@(DiskFiles)"
          DestinationFolder="$(TargetDir)Widgets\DesktopWidgets3.Widget.Jack251970.Disk\%(RecursiveDir)" />
    
    <ItemGroup>
      <NetworkFiles Include="$(SolutionDir)Widgets\DesktopWidgets3.Widget.Jack251970.Network\bin\$(Platform)\$(Configuration)\$(TargetFramework)\**\*.*" />
    </ItemGroup>

    <Copy SourceFiles="@(NetworkFiles)"
          DestinationFolder="$(TargetDir)Widgets\DesktopWidgets3.Widget.Jack251970.Network\%(RecursiveDir)" />
    
    <ItemGroup>
      <PerformanceFiles Include="$(SolutionDir)Widgets\DesktopWidgets3.Widget.Jack251970.Performance\bin\$(Platform)\$(Configuration)\$(TargetFramework)\**\*.*" />
    </ItemGroup>

    <Copy SourceFiles="@(PerformanceFiles)"
          DestinationFolder="$(TargetDir)Widgets\DesktopWidgets3.Widget.Jack251970.Performance\%(RecursiveDir)" />
  </Target>
  
</Project>
